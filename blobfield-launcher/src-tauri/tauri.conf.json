{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BlobField Launcher",
  "version": "0.7.0",
  "identifier": "BlobField-Launcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "window": {
      "enabled": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNFNjhEMzYyQzYzNEYyMwpSV1FqVDJNc05vM21BNHpmeStDbEJnb0JiZFBteW9PVGsxdXZEUy9UTVFyWnlIQzdYQVFKY2YwWQo=",
      "endpoints": [
        "https://github.com/Xannix246/BlobField-Launcher/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "BlobField Launcher",
        "width": 1200,
        "height": 700,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "closable": true,
        "minimizable": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": ["resources/locales"],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      }
    },
    "createUpdaterArtifacts": true
  }
}
