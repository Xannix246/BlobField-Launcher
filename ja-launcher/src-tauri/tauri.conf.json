{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BlobField Launcher",
  "version": "0.5.1",
  "identifier": "BlobField-Launcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "window": {
      "enabled": true
    }
  },
  "app": {
    "windows": [
      {
        "title": "BlobField Launcher",
        "width": 1200,
        "height": 700,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "closable": true,
        "minimizable": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
